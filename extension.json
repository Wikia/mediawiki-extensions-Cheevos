{
	"name": "Cheevos",
	"version": "1.0",
	"author": [
		"Wiki Platform Team"
	],
	"descriptionmsg": "achievements_description",
	"type": "parserhook",
	"GroupPermissions": {
		"sysop": {
			"achievement_admin": true,
			"edit_achievements": true,
			"edit_meta_achievements": true,
			"edit_achievement_triggers": true,
			"delete_achievements": true,
			"restore_achievements": true,
			"award_achievements": true
		},
		"hydra_staff": {
			"achievement_admin": true,
			"edit_achievements": true,
			"edit_meta_achievements": true,
			"edit_achievement_triggers": true,
			"delete_achievements": true,
			"restore_achievements": true,
			"award_achievements": true
		},
		"hydra_admin": {
			"achievement_admin": true,
			"edit_achievements": true,
			"edit_meta_achievements": true,
			"edit_achievement_triggers": true,
			"delete_achievements": true,
			"restore_achievements": true,
			"award_achievements": true,
			"mega_achievement_admin": true,
			"edit_mega_achievements": true
		}
	},
	"AvailableRights": [
		"achievement_admin",
		"mega_achievement_admin",
		"edit_achievements",
		"edit_meta_achievements",
		"edit_mega_achievements",
		"edit_achievement_triggers",
		"delete_achievements",
		"restore_achievements",
		"award_achievements"
	],
	"SpecialPages": {
		"ManageAchievements" : "SpecialManageAchievements"
	},
	"MessagesDirs": {
		"Achievements": [
			"i18n"
		]
	},
	"ExtensionMessagesFiles": {
		"SpecialAchievements": "Cheevos.alias.php"
	},
	"AutoloadClasses": {
		"CheevosHooks": "Cheevos.hooks.php",
		"Cheevos\\Cheevos" : "classes/Cheevos.php",
		"Cheevos\\Model" : "classes/CheevosModel.php",
		"Cheevos\\Achievement" : "classes/CheevosAchievement.php",
		"Cheevos\\AchievementCategory" : "classes/CheevosAchievementCategory.php",
		"SpecialManageAchievements": "specials/SpecialManageAchievements.php",
		"TemplateManageAchievements": "templates/TemplateManageAchievements.php"
	},
	"ResourceModules": {
		"ext.achievements.resumable.js": {
			"scripts": [
				"js/achievements.resumable.js"
			],
			"targets": [
				"desktop",
				"mobile"
			],
			"position": "top"
		},
		"ext.achievements.styles": {
			"styles": [
				"css/achievements.css"
			],
			"dependencies": [
				"ext.hydraCore.button",
				"ext.hydraCore.pagination"
			],
			"targets": [
				"desktop",
				"mobile"
			],
			"position": "top"
		},
		"ext.achievements.js": {
			"scripts": [
				"js/achievements.js"
			],
			"dependencies": [
				"ext.achievements.resumable.js"
			],
			"targets": [
				"desktop",
				"mobile"
			],
			"position": "top"
		},
		"ext.achievements.triggerBuilder.js": {
			"scripts": [
				"js/achievements.triggerBuilder.js"
			],
			"dependencies": [
				"ext.achievements.resumable.js"
			],
			"messages": [
				"add_condition",
				"add_trigger",
				"cancel_trigger",
				"delete_condition",
				"delete_trigger",
				"save_trigger",
				"trigger_builder",
				"error_connecting_to_site",
				"bad_site_key",
				"choose_existing_hook"
			],
			"targets": [
				"desktop",
				"mobile"
			],
			"position": "top"
		},
		"ext.achievements.notice.js": {
			"scripts": [
				"js/achievements.notice.js"
			],
			"dependencies": [
				"jquery.effects.core",
				"jquery.effects.pulsate"
			],
			"targets": [
				"desktop"
			],
			"position": "top"
		}
	},
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteExtPath": "Achievements"
	},
	"Hooks": {

	},
	"callback": "CheevosHooks::onRegistration",
	"manifest_version": 1
}
